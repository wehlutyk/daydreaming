<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingTop="@dimen/measures_paddingTop"
            android:paddingBottom="@dimen/measures_paddingBottom"
            android:paddingRight="@dimen/measures_lateralPadding"
            android:paddingLeft="@dimen/measures_lateralPadding"
            android:scrollbarSize="5dp"
            android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
        >
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:gravity="center" >


    <LinearLayout
                  android:orientation="vertical"
                  android:layout_gravity="center_horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/firstLaunchMeasures2_layout_data">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/firstLaunchMeasures2_text_data"
            android:textAppearance="@style/ui_font_title_white"
            android:layout_marginBottom="@dimen/measures_item_vertical_spacing"
                />


        <TextView
            android:id="@+id/firstLaunchMeasures2_textNetworkConnection"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/status_wrong"
            android:textAppearance="@style/ui_font_title_white_bold"
            android:text="@string/firstLaunchMeasures2_text_network_connection"
            android:layout_marginBottom="@dimen/measures_item_vertical_spacing"
                />

        <Button
                android:id="@+id/firstLaunchMeasures2_buttonNetworkSettings"
                android:paddingLeft="@dimen/block_button_horizontal_padding"
                android:paddingRight="@dimen/block_button_horizontal_padding"
                android:paddingTop="@dimen/block_button_vertical_padding"
                android:paddingBottom="@dimen/block_button_vertical_padding"
                android:layout_marginBottom="@dimen/measures_item_vertical_spacing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/firstLaunchMeasures2_button_change_data_settings"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/ui_white_text_color"
                android:background="@drawable/dark_blue_rectangle"
                android:onClick="onClick_buttonNetworkSettings"
                />


    </LinearLayout>


    <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/firstLaunchMeasures2_layout_location"
            android:layout_below="@id/firstLaunchMeasures2_layout_data"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="@dimen/measures_item_vertical_spacing"

            >

        <TextView
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:text="@string/firstLaunchMeasures2_text_location"
                android:textAppearance="@style/ui_font_title_white"
                android:layout_marginBottom="@dimen/measures_item_vertical_spacing"

                />


        <TextView
                android:id="@+id/firstLaunchMeasures2_textCoarseLocation"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/firstLaunchMeasures2_text_coarse_location"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/status_wrong"
                android:textAppearance="@style/ui_font_title_white_bold"
                android:layout_marginBottom="@dimen/measures_item_vertical_spacing"

                />


        <Button
                android:id="@+id/firstLaunchMeasures2_buttonLocationSettings"
                android:paddingLeft="@dimen/block_button_horizontal_padding"
                android:paddingRight="@dimen/block_button_horizontal_padding"
                android:paddingTop="@dimen/block_button_vertical_padding"
                android:paddingBottom="@dimen/block_button_vertical_padding"
                android:layout_marginBottom="@dimen/measures_item_vertical_spacing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/firstLaunchMeasures2_button_change_location_settings"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/ui_white_text_color"
                android:background="@drawable/dark_blue_rectangle"
                android:onClick="onClick_buttonLocationSettings"
                />



    </LinearLayout>


    <!-- -->


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:id="@+id/firstLaunchMeasures2_layout_pull"
            android:layout_below="@id/firstLaunchMeasures2_layout_location"

            android:orientation="vertical" >


        <TextView
                android:id="@+id/firstLaunchMeasures2_text_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/firstLaunchMeasures2_text_intro"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
                android:id = "@+id/firstLaunchMeasures2_loading_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"/>


        <TextView
                android:id="@+id/firstLaunchMeasures2_text_downloading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:drawableLeft="@drawable/status_wrong"
                android:gravity="center_vertical"
                android:text="@string/firstLaunchMeasures2_text_downloading" />




    </LinearLayout>



    <!-- -->




    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/firstLaunchMeasures2_layout_pull"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="@dimen/next_button_right_margin"
            android:gravity="right">


        <ImageButton
                android:id="@+id/firstLaunchMeasures2_buttonNext"
                android:layout_width="@dimen/button_next_width"
                android:layout_height="@dimen/button_next_height"
                android:onClick="onClick_buttonNext"
                android:background="@drawable/button_cloud_next"
                />


    </LinearLayout>



</RelativeLayout>
</ScrollView>
