<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/question_slider_rootLinearLayout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="16dp"
              android:orientation="vertical"
              android:tag="subquestion" >

    <TextView
            android:id="@+id/Questionnaire_question"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="@style/ui_font_title_white_bold"
            android:gravity="center_horizontal"
            android:paddingTop="20dp"
            />
    <SeekBar
            android:id="@+id/Questionnaire_seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="6dip"
            android:maxHeight="6dip"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>
    <TextView
            android:id="@+id/Questionnaire_answer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="@style/ui_font_bodytext_darkblue"
            android:gravity="center_horizontal"/>



</LinearLayout>