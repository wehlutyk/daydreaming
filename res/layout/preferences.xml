<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:key="notifications_cat_key"
        android:title="@string/notifications_settings" >

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="notification_sound_key"
            android:persistent="true"
            android:title="@string/notification_sound" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="notification_vibrator_key"
            android:persistent="true"
            android:title="@string/notification_vibrator" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="notification_blink_key"
            android:persistent="true"
            android:title="@string/notification_led" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="time_window_settings_key"
        android:title="@string/time_window_settings" >

        <com.brainydroid.daydreaming.ui.TimePreference
            android:defaultValue="@pref/settings_time_window_lb_default"
            android:key="time_window_lb_key"
            android:persistent="true"
            android:summary="@pref/settings_time_window_lb_default"
            android:title="@string/time_window_lb"
            android:negativeButtonText="@string/settings_picker_negative"
            android:positiveButtonText="@string/settings_picker_positive" />

        <com.brainydroid.daydreaming.ui.TimePreference
            android:defaultValue="@pref/settings_time_window_ub_default"
            android:key="time_window_ub_key"
            android:persistent="true"
            android:summary="@pref/settings_time_window_ub_default"
            android:title="@string/time_window_ub"
            android:negativeButtonText="@string/settings_picker_negative"
            android:positiveButtonText="@string/settings_picker_positive" />
    </PreferenceCategory>

</PreferenceScreen>