<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
            >

        <TextView
            android:id="@+id/firstLaunchProfile_titleAboutYou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/firstLaunchProfile_title_about_you"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp" >

            <TextView
                    android:id="@+id/firstLaunchProfile_textGender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginRight="4dp"
                    android:hint="@string/firstLaunchProfile_text_age"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white"></TextView>

            <Spinner
                    android:id="@+id/firstLaunchProfile_ageSpinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/spinner_box"/>


            <!--        <EditText
                        android:id="@+id/firstLaunchProfile_editAge"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_marginRight="4dp"
                        android:ems="10"
                        android:hint="@string/firstLaunchProfile_hint_age"
                        android:inputType="number"
                        android:padding="8dp"
                        android:background="@drawable/input_round_corners">

                        <requestFocus />
                    </EditText>    -->


            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp" >

            <TextView
                android:id="@+id/firstLaunchProfile_textGender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginRight="4dp"
                android:hint="@string/firstLaunchProfile_text_gender"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"     >
            </TextView>

            <Spinner
                android:id="@+id/firstLaunchProfile_genderSpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginLeft="4dp"
                android:background="@drawable/spinner_box"/>


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                >

            <TextView
                    android:id="@+id/firstLaunchProfile_textEducation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginRight="4dp"
                    android:hint="@string/firstLaunchProfile_text_education"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    >
            </TextView>

            <Spinner
                    android:id="@+id/firstLaunchProfile_educationSpinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/spinner_box"/>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <android.support.v7.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        
        <!--    <Button
                android:id="@+id/firstLaunchProfile_buttonNext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableRight="@drawable/navigation_next_item"
                android:onClick="onClick_buttonNext"
                android:text="@string/firstLaunchProfile_button_next"
                android:background="@drawable/nuage"/> -->

            <ImageButton
                    android:id="@+id/firstLaunchProfile_buttonNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick_buttonNext"
                    android:text="@string/firstLaunchDescription_button_next"
                    android:background="@drawable/button_cloud_next"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>