<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/question_matrix_choice_rootLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/question_matrix_choice_mainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:textAppearance="@style/ui_font_big_title_bold"
        android:textColor="@color/ui_white_text_color"/>

    <LinearLayout
        android:id="@+id/question_matrix_choice_rowContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

    </LinearLayout>

</LinearLayout>