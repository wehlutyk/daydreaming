<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:paddingBottom="13dp"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"

    android:id="@+id/glossary_item">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KEY"
            android:textColor="@color/ui_white_text_color"
            android:textAppearance="@style/ui_font_title_bold"
            android:id="@+id/glossary_item_key" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="also British English: fairy cake; Australian English: fairy cake patty cake or cup cake) is a small cake designed to serve one person, which may be baked in a small thin paper or aluminium cup. As with larger cakes, icing and other cake decorations, such as sprinkles, may be applied."
        android:lineSpacingExtra="@dimen/text_linespacing"
        android:textColor="@color/ui_white_text_color"
        android:textAppearance="@style/ui_font_title"
        android:id="@+id/glossary_item_value" />
</LinearLayout>