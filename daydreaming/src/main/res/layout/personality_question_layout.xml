<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/question_slider_rootLinearLayout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="16dp"
              android:orientation="vertical"
              android:tag="subquestion" >

    <TextView
            android:id="@+id/Questionnaire_question"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="@style/ui_font_title_bold"
            android:textColor="@color/ui_white_text_color"
            android:gravity="center_horizontal"
            android:paddingTop="20dp"
            />

    <TextView
        android:id="@+id/Questionnaire_question_secondary"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="@style/ui_font_bodyText"
        android:textColor="@color/ui_white_text_color"
        android:gravity="center_horizontal"
        android:paddingTop="20dp"
        />

    <com.brainydroid.daydreaming.ui.AlphaSeekBar
            android:id="@+id/Questionnaire_seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="6dip"
            android:maxHeight="6dip"
            android:paddingLeft="@dimen/seekBar_touchZone_radius"
            android:paddingRight="@dimen/seekBar_touchZone_radius"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:thumbOffset="@dimen/seekBar_touchZone_radius"/>
    <TextView
            android:id="@+id/Questionnaire_answer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="@style/ui_font_bodyText"
            android:textColor="@color/ui_dark_blue_color"
            android:gravity="center_horizontal"/>



</LinearLayout>