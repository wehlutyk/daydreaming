<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/glossary_vertical_paddingTop_title"
        android:paddingBottom="10dp"
        android:id="@+id/linearLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/ui_font_big_title_bold"
            android:text="@string/glossary_title"
            android:textColor="@color/ui_white_text_color"
            android:id="@+id/textView" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout2"
        >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/glossary_items_layout"
>


            </LinearLayout>
    </ScrollView>
    </RelativeLayout>

    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:id="@+id/linearLayout3">

        <ImageButton
            android:id="@+id/glossary_backtodashboard_button"
            android:layout_width="@dimen/dashboard_settings_button_size_withmargin"
            android:layout_height="@dimen/dashboard_settings_button_size_withmargin"
            android:padding="@dimen/dashboard_settings_button_margin"
            android:scaleType="fitCenter"
            android:onClick="onClick_backToDashboard"
            android:src="@drawable/dashboard_arrow"
            android:background="@null"/>
    </LinearLayout>
</RelativeLayout>