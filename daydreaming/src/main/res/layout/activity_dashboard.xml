    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

    <LinearLayout
            android:id="@+id/dashboard_testing_linearlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_alignParentBottom="true"
            android:gravity="right">

        <Button
            android:id="@+id/button_test_poll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:onClick="runPollNow"
            android:text="Probe now"/>

        <Button
                android:id="@+id/button_reload_parameters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:onClick="reloadParametersKeepProfileAnswers"
                android:text="Reload parameters" />
    </LinearLayout>


</RelativeLayout>

