<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/question_multiple_choice_rootLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:orientation="vertical"
    android:tag="subQuestion" >


    <LinearLayout
        android:id="@+id/question_multiple_choice_questionTextLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:tag="subquestion" >

        <LinearLayout
            android:id="@+id/question_multiple_choice_mainQuestionTextLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:tag="subquestion" >

            <TextView
                android:id="@+id/question_multiple_choice_mainText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:text=""
                android:textAppearance="@style/ui_font_big_title_bold"
                android:textColor="@color/ui_white_text_color"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/question_multiple_choice_rootChoices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/question_multiple_choice_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/question_multiple_choice_otherCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/custom_checkbox"
            android:text=""
            android:layout_marginRight="@dimen/global_text_drawable_padding"/>

        <EditText
            android:id="@+id/question_multiple_choice_otherEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/questionMultipleChoice_other_hint"
            android:textColorHint="@color/ui_white_text_color"
            android:inputType="textCapSentences"
            android:textAppearance="@style/ui_font_bodytext"
            android:textColor="@color/ui_white_text_color"
            >

        </EditText>

    </LinearLayout>

</LinearLayout>