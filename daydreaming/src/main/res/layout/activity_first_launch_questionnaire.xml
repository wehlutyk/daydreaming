<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/questionnaire_marginTop"
            android:paddingBottom="@dimen/questionnaire_paddingBottom"
            android:paddingRight="@dimen/questionnaire_lateralPadding"
            android:paddingLeft="@dimen/questionnaire_lateralPadding"
            android:scrollbarSize="5dp"
            android:padding="15dp"
            android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
            android:id="@+id/firstLaunchQuestionnaire_Scrollview" >


    <LinearLayout android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"  >

    <LinearLayout android:id = "@+id/questions_linear_layout"
                  android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:paddingRight="15dp"
                  android:paddingLeft="15dp"
            >



        <TextView
                android:id="@+id/Questionnaire_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/Questionnaire_title"
                android:lines="2"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:paddingBottom="30dp"
                android:textAppearance="@style/ui_font_big_title_bold"
                android:textColor="@color/ui_white_text_color"/>

        <TextView
                android:id="@+id/Questionnaire_intro"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/Questionnaire_intro"
                android:paddingBottom="20dp"
                android:lineSpacingExtra="4dp"
                android:textAppearance="@style/ui_font_title_bold"
                android:textColor="@color/ui_white_text_color"/>







    </LinearLayout>

    <LinearLayout android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:layout_marginRight="@dimen/next_button_right_margin_inc_scrollpadding"
                  android:paddingLeft="15dp">


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:gravity="right"
                android:layout_marginBottom="30dp"
                >



            <ImageButton
                    android:id="@+id/firstLaunchQuestionnaire_buttonSkip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick_buttonSkip"
                    android:background="@drawable/button_cloud_next"
                    android:visibility="gone"
                    />
            <ImageButton
                    android:id="@+id/firstLaunchQuestionnaire_buttonNext"
                    android:layout_width="@dimen/button_next_width"
                    android:layout_height="@dimen/button_next_height"
                    android:onClick="onClick_buttonNext"
                    android:background="@drawable/button_cloud_next_selector"
                    android:layout_toRightOf="@id/firstLaunchQuestionnaire_buttonSkip"/>


        </RelativeLayout>


    </LinearLayout>


    </LinearLayout>


</ScrollView>


